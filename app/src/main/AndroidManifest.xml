<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="du.a188project1.bestdamapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".BestDamApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/BestDamTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:label="@string/register_title"
            android:theme="@style/BestDamTheme"
            />

        <activity
            android:name=".MainActivity"
            android:theme="@style/BestDamTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".GenreSelection"
            android:label="@string/title_activity_Genre_selection"
            android:theme="@style/BestDamTheme">
            <intent-filter>
                <action android:name="android.intent.action.genre" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity
            android:name=".EventActivity"
            android:label="@string/title_activity_event"
            android:theme="@style/BestDamThemeNoToolbar">
        </activity>



    </application>

</manifest>